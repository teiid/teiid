<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
 
    <container qualifier="jboss7" default="true">
        <protocol type="jmx-as7">
            <property name="executionType">REMOTE</property>
        </protocol>
            <configuration>
                <property name="jbossHome">${jbossHome}</property>
                <property name="serverConfig">${serverConfig}</property>
                <property name="javaVmArguments">-Xmx512m -XX:MaxPermSize=128m -Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=n -Dteiid.vdb.UseConnectorMetadata=custom</property>
            </configuration>        
    </container>
</arquillian>