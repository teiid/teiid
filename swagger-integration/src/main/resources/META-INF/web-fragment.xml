<?xml version="1.0" encoding="ISO-8859-1"?>

<web-fragment version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

	<servlet>
  		<servlet-name>BootstrapServlet</servlet-name>
  		<servlet-class>org.teiid.swagger.rest.BootstrapServlet</servlet-class>
  		<load-on-startup>2</load-on-startup>
  	</servlet>
  	
  	<servlet-mapping>
  		<servlet-name>BootstrapServlet</servlet-name>
  		<url-pattern>/api-doc</url-pattern>
  	</servlet-mapping>
  	
  	<filter>
        <filter-name>ApiOriginFilter</filter-name>
        <filter-class>org.teiid.swagger.rest.ApiOriginFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>ApiOriginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-fragment>
