<config default-supplement="default">
   <extension-module>org.jboss.as.logging</extension-module>
   <subsystem xmlns="urn:jboss:domain:logging:3.0">
       <?HANDLERS?>
       <periodic-rotating-file-handler name="FILE" autoflush="true">
           <formatter>
               <named-formatter name="PATTERN"/>
           </formatter>
           <file relative-to="jboss.server.log.dir" path="server.log"/>
           <suffix value=".yyyy-MM-dd"/>
           <append value="@@append@@"/>
       </periodic-rotating-file-handler>
       <?LOGGERS?>
       <root-logger>
           <level name="INFO"/>
           <handlers>
               <?ROOT-LOGGER-HANDLERS?>
           </handlers>
       </root-logger>
       <formatter name="PATTERN">
           <pattern-formatter pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%c] (%t) %X{teiid-session} %s%e%n"/>
       </formatter>
       <formatter name="COLOR-PATTERN">
           <pattern-formatter pattern="%K{level}%d{HH:mm:ss,SSS} %-5p [%c] (%t) %X{teiid-session} %s%e%n"/>
       </formatter>
   </subsystem>
   <supplement name="default">
       <replacement placeholder="HANDLERS">
           <console-handler name="CONSOLE">
               <level name="INFO"/>
               <formatter>
                   <named-formatter name="COLOR-PATTERN"/>
               </formatter>
           </console-handler>
       </replacement>
       <replacement placeholder="ROOT-LOGGER-HANDLERS">
           <handler name="CONSOLE"/>
           <handler name="FILE"/>
       </replacement>
       <replacement placeholder="@@append@@" attributeValue="true"/>
       <replacement placeholder="LOGGERS">
           <logger category="com.arjuna">
               <level name="WARN"/>
           </logger>
           <logger category="org.jboss.as.config">
               <level name="DEBUG"/>
           </logger>
           <logger category="sun.rmi">
               <level name="WARN"/>
           </logger>
       </replacement>
   </supplement>
   <supplement name="minimal">
       <replacement placeholder="HANDLERS">
           <console-handler name="CONSOLE">
               <level name="INFO"/>
               <formatter>
                   <named-formatter name="COLOR-PATTERN"/>
               </formatter>
           </console-handler>
       </replacement>
       <replacement placeholder="ROOT-LOGGER-HANDLERS">
           <handler name="CONSOLE"/>
           <handler name="FILE"/>
       </replacement>
       <replacement placeholder="@@append@@" attributeValue="false"/>
       <replacement placeholder="LOGGERS"/>
   </supplement>
   <supplement name="no-console">
       <replacement placeholder="HANDLERS"/>
       <replacement placeholder="ROOT-LOGGER-HANDLERS">
           <handler name="FILE"/>
       </replacement>
       <replacement placeholder="@@append@@" attributeValue="true"/>
       <replacement placeholder="LOGGERS">
           <logger category="com.arjuna">
               <level name="WARN"/>
           </logger>
           <logger category="org.jboss.as.config">
               <level name="DEBUG"/>
           </logger>
           <logger category="sun.rmi">
               <level name="WARN"/>
           </logger>
       </replacement>
   </supplement>
</config>