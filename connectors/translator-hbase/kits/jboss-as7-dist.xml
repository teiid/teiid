<!--This script builds a zip for Teiid Server Installation -->
<assembly>
  
  <id>jboss-as7-dist</id> 
  
  <formats>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>modules</baseDirectory>

 <fileSets>
    <fileSet>
        <directory>kits/jboss-as7/modules</directory>
        <outputDirectory>${jbossas-module-root}</outputDirectory>     
        <filtered>true</filtered> 
        <includes>
          <include>**/*</include>
        </includes>   
    </fileSet>    
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.jboss.teiid.connectors:hbase-api</include>
        <include>org.apache.phoenix:phoenix-core</include>
      </includes>
      <outputDirectory>${jbossas-module-root}/org/jboss/teiid/translator/hbase/api/main</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
    </dependencySet>
    <dependencySet>
          <outputDirectory>${jbossas-module-root}/org/jboss/teiid/translator/hbase/main</outputDirectory>
          <useTransitiveDependencies>false</useTransitiveDependencies>
          <includes>
              <include>org.jboss.teiid.connectors:translator-hbase</include>
          </includes>
      </dependencySet>
  </dependencySets>
  
</assembly>
