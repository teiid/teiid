<!--This script builds a zip for Teiid Server Installation -->
<assembly>
  
 <id>wildfly-dist</id> 
  
  <formats>
    <format>zip</format>
  </formats>
  
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>modules</baseDirectory>

 <fileSets>
    <fileSet>
        <directory>kits/wildfly/modules</directory>
        <outputDirectory>${wildfly-module-root}</outputDirectory>     
        <filtered>true</filtered> 
        <includes>
          <include>**/*</include>
        </includes>   
    </fileSet>
    <fileSet>
        <directory>kits/wildfly/docs</directory>
        <outputDirectory>docs</outputDirectory>     
        <filtered>true</filtered> 
        <includes>
          <include>**/*</include>
        </includes>   
    </fileSet>  
  </fileSets>
  
  <dependencySets>
      <dependencySet>
          <outputDirectory>${wildfly-module-root}/org/jboss/teiid/translator/infinispan/cache/main</outputDirectory>
          <useTransitiveDependencies>false</useTransitiveDependencies>
          <includes>
              <include>org.jboss.teiid.connectors:translator-infinispan-cache</include>
          </includes>
      </dependencySet>
  </dependencySets>
  
  
</assembly>
