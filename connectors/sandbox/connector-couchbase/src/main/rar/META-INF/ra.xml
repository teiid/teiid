<?xml version="1.0" encoding="UTF-8"?>

<connector xmlns="http://java.sun.com/xml/ns/j2ee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
           http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd"
           version="1.5">

   <vendor-name>Couchbase</vendor-name>
   <eis-type>couchbase</eis-type>
   <resourceadapter-version>1.0</resourceadapter-version>
   <license>
      <description>
        ${license}
      </description>
      <license-required>true</license-required>
   </license>
   <resourceadapter>
      <resourceadapter-class>org.teiid.resource.adapter.couchbase.couchbaseResourceAdapter</resourceadapter-class>

      <outbound-resourceadapter>
         <connection-definition>
            <managedconnectionfactory-class>org.teiid.resource.adapter.couchbase.couchbaseManagedConnectionFactory</managedconnectionfactory-class>

            <!-- Common properties for all connectors -->
            <!-- Only adding support for a single server, but in future should support a cluster-->
            <config-property>
               <description>{$display:"Server URL Address",$required:"true"}</description>
               <config-property-name>serverURL</config-property-name>
               <config-property-type>java.lang.String</config-property-type>
            </config-property>

            <!-- couchbase Specific properties START -->
            <config-property>
               <description>{$display:"Bucket Name",$required:"true"}</description>
               <config-property-name>bucketName</config-property-name>
               <config-property-type>java.lang.String</config-property-type>
            </config-property>

            <config-property>
               <description>{$display:"Bucket Password",$required:"false"}</description>
               <config-property-name>bucketPassword</config-property-name>
               <config-property-type>java.lang.String</config-property-type>
            </config-property>

            <!-- couchbase Specific properties END -->

            <connectionfactory-interface>javax.resource.cci.ConnectionFactory</connectionfactory-interface>
            <connectionfactory-impl-class>org.teiid.resource.spi.WrappedConnectionFactory</connectionfactory-impl-class>
            <connection-interface>javax.resource.cci.Connection</connection-interface>
            <connection-impl-class>org.teiid.resource.spi.WrappedConnection</connection-impl-class>

         </connection-definition>

         <transaction-support>NoTransaction</transaction-support>

        <authentication-mechanism>
            <authentication-mechanism-type>BasicPassword</authentication-mechanism-type>
            <credential-interface>javax.resource.spi.security.PasswordCredential</credential-interface>
        </authentication-mechanism>
        <reauthentication-support>false</reauthentication-support>
      </outbound-resourceadapter>
   </resourceadapter>
</connector>
