<!--This script builds a zip for Teiid Server Installation -->
<assembly>

    <id>wildfly-dist</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>modules</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>kits/wildfly/modules</directory>
            <outputDirectory>${wildfly-module-root}</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>${wildfly-module-root}/com/google/gdata/main</outputDirectory>
            <includes>
                <include>com.google.gdata:core</include>
            </includes>
            <useTransitiveDependencies>false</useTransitiveDependencies>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${wildfly-module-root}/org/jboss/teiid/resource-adapter/google/main</outputDirectory>
            <includes>
                <include>org.jboss.teiid.connectors:connector-google</include>
            </includes>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
</assembly>
